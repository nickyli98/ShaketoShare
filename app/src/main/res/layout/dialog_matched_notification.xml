<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/matchedNotificationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@color/colorAccent"
        android:textSize="@dimen/input_text_size"
        android:padding="@dimen/selectionMarginFull"
        android:textColor="@color/inputText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginVerticalFull"
        android:layout_marginEnd="@dimen/marginVerticalFull"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/weight"
                app:srcCompat="@drawable/weight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/selectionMarginHalf">

                <TextView
                    android:id="@+id/matched_weightLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/weightDetails"
                    android:textSize="@dimen/input_text_size"
                    android:textColor="@color/textView"/>

                <TextView
                    android:id="@+id/matched_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/input_text_size"
                    android:textColor="@color/textView"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/tonnes"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/input_text_size"
                    android:textColor="@color/textView"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/lineColour"
            android:layout_marginStart="@dimen/lineMargin"
            android:layout_marginEnd="@dimen/lineMargin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/calendar"
                android:src="@drawable/calendar"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/selectionMarginHalf"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/matched_date"
                    android:layout_width="0dp"
                    android:textSize="@dimen/input_text_size"
                    android:text="@string/date_expire"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textView"/>
                <TextView
                    android:id="@+id/matched_dateExpire"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/input_text_size"
                    android:textAlignment="viewEnd"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textView"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/lineColour"
            android:layout_marginStart="@dimen/lineMargin"
            android:layout_marginEnd="@dimen/lineMargin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/price"
                android:src="@drawable/price"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/selectionMarginHalf"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/matched_price"
                    android:layout_width="0dp"
                    android:textSize="@dimen/input_text_size"
                    android:text="@string/priceDetails"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/textView"/>
                <TextView
                    android:id="@+id/matched_priceVal"
                    android:layout_width="0dp"
                    android:textSize="@dimen/input_text_size"
                    android:textAlignment="viewEnd"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/textView"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/input_text_size"
                    android:text="HKD"
                    android:layout_weight="2"
                    android:textColor="@color/textView"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/lineColour"
            android:layout_marginStart="@dimen/lineMargin"
            android:layout_marginEnd="@dimen/lineMargin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nearby_radius"
                app:srcCompat="@drawable/nearby_radius"
                android:layout_gravity="center"
                android:textColor="@color/textView"/>
            <TextView
                android:id="@+id/matched_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/selectionMarginHalf"
                android:textSize="@dimen/input_text_size"
                android:textColor="@color/textView"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/lineColour"
            android:layout_marginStart="@dimen/lineMargin"
            android:layout_marginEnd="@dimen/lineMargin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/name"
                app:srcCompat="@drawable/name" />

            <TextView
                android:id="@+id/matched_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/selectionMarginHalf"
                android:textSize="@dimen/input_text_size"
                android:textColor="@color/textView"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/lineColour"
            android:layout_marginStart="@dimen/lineMargin"
            android:layout_marginEnd="@dimen/lineMargin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/contact_us"
                app:srcCompat="@drawable/contact_us"
                android:textColor="@color/textView"/>

            <TextView
                android:id="@+id/matched_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/selectionMarginHalf"
                android:textSize="@dimen/input_text_size"
                android:textColor="@color/textView"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_gravity="bottom"
        android:id="@+id/matched_full_details"
        android:layout_marginStart="@dimen/marginVerticalFull"
        android:layout_marginEnd="@dimen/marginVerticalFull"
        android:layout_marginBottom="@dimen/marginVerticalFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See full details" />

</LinearLayout>