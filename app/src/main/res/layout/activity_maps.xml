<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="0dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="ic.hku.hk.MapsActivity">
        </fragment>

        <ImageView
            android:id="@+id/centreMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            sothree:srcCompat="@android:drawable/ic_delete"
            android:contentDescription="@string/marks_centre_of_map" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addressPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/textSelectOn"
                android:visibility="invisible"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"/>

            <Button
                android:id="@+id/selectFromMapDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_from_map_done"
                android:visibility="invisible" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonBar"
            android:orientation="horizontal">

            <!--REPLACE WITH ICON-->
            <Button
                android:id="@+id/minimise"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="V"
                android:textAlignment="center"
                android:textSize="14sp"
                android:visibility="invisible"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:gravity="center_vertical|end"
                android:text="Share"
                android:textAlignment="center"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <TabHost
            android:id="@+id/tabHost"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <GridLayout
                        android:id="@+id/supplyTab"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:layout_height="match_parent"
                        android:columnCount="2"
                        android:rowCount="3" >
                        <Switch
                            android:id="@+id/supplyOrganic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill_horizontal"
                            android:layout_columnWeight="1"
                            android:layout_columnSpan="1"
                            android:text="@string/organicSwitchName"
                            android:textSize="8pt"
                            android:layout_marginTop="@dimen/marginVerticalFull"
                            android:layout_marginStart="@dimen/marginHorizontalFull"
                            android:layout_marginEnd="@dimen/switchMargin"
                            android:layout_marginBottom="@dimen/marginVerticalHalf" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/marginVerticalFull"
                            android:layout_marginStart="@dimen/marginHorizontalHalf"
                            android:layout_marginEnd="@dimen/marginHorizontalFull"
                            android:layout_marginBottom="@dimen/marginVerticalHalf">

                            <EditText
                                android:id="@+id/supplyWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="5"
                                android:inputType="number"
                                android:hint="@string/weight_hint"
                                android:imeOptions="actionDone"
                                android:padding="5dp"
                                android:background="@color/textSelectOff" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8pt"
                                android:text="@string/tonnes"
                                android:padding="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/marginVerticalHalf"
                            android:layout_marginStart="@dimen/marginHorizontalFull"
                            android:layout_marginEnd="@dimen/marginHorizontalHalf"
                            android:layout_marginBottom="@dimen/marginVerticalHalf">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8pt"
                                android:text="@string/date_from"
                                android:padding="5dp"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/supplyDateFrom"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:inputType="date"
                                android:background="@color/textSelectOff"
                                android:padding="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/marginVerticalHalf"
                            android:layout_marginStart="@dimen/marginHorizontalHalf"
                            android:layout_marginEnd="@dimen/marginHorizontalFull"
                            android:layout_marginBottom="@dimen/marginVerticalHalf">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8pt"
                                android:text="@string/date_to"
                                android:padding="5dp"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <EditText
                                android:id="@+id/supplyDateTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:inputType="date"
                                android:layout_gravity="end"
                                android:background="@color/textSelectOff"
                                android:padding="5dp"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/pickUpAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="8pt"
                            android:layout_gravity="fill"
                            android:layout_columnWeight="1"
                            android:layout_columnSpan="2"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:layout_marginTop="@dimen/marginVerticalHalf"
                            android:layout_marginStart="@dimen/marginHorizontalFull"
                            android:layout_marginEnd="@dimen/marginHorizontalFull"
                            android:layout_marginBottom="@dimen/marginVerticalFull"
                            android:hint="@string/address_hint"
                            android:padding="5dp"
                            android:background="@color/textSelectOff"/>
                    </GridLayout>
                    <GridLayout
                        android:id="@+id/demandTab"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:layout_height="match_parent"
                        android:columnCount="2"
                        android:rowCount="3" >
                        <Switch
                            android:id="@+id/demandOrganic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill_horizontal"
                            android:layout_columnWeight="1"
                            android:layout_columnSpan="1"
                            android:text="@string/organicSwitchName"
                            android:textSize="8pt"
                            android:layout_marginTop="@dimen/marginVerticalFull"
                            android:layout_marginStart="@dimen/marginHorizontalFull"
                            android:layout_marginEnd="@dimen/switchMargin"
                            android:layout_marginBottom="@dimen/marginVerticalHalf" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/marginVerticalFull"
                            android:layout_marginStart="@dimen/marginHorizontalHalf"
                            android:layout_marginEnd="@dimen/marginHorizontalFull"
                            android:layout_marginBottom="@dimen/marginVerticalHalf">

                            <EditText
                                android:id="@+id/demandWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="5"
                                android:inputType="number"
                                android:hint="@string/weight_hint"
                                android:imeOptions="actionDone"
                                android:padding="5dp"
                                android:background="@color/textSelectOff" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8pt"
                                android:text="@string/tonnes"
                                android:padding="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/marginVerticalHalf"
                            android:layout_marginStart="@dimen/marginHorizontalFull"
                            android:layout_marginEnd="@dimen/marginHorizontalHalf"
                            android:layout_marginBottom="@dimen/marginVerticalHalf">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8pt"
                                android:text="@string/date_from"
                                android:padding="5dp"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/demandDateFrom"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:inputType="date"
                                android:background="@color/textSelectOff"
                                android:padding="5dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill_horizontal"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/marginVerticalHalf"
                            android:layout_marginStart="@dimen/marginHorizontalHalf"
                            android:layout_marginEnd="@dimen/marginHorizontalFull"
                            android:layout_marginBottom="@dimen/marginVerticalHalf">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="8pt"
                                android:text="@string/date_to"
                                android:padding="5dp"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <EditText
                                android:id="@+id/demandDateTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:inputType="date"
                                android:layout_gravity="end"
                                android:background="@color/textSelectOff"
                                android:padding="5dp"/>
                        </LinearLayout>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="8pt"
                            android:layout_gravity="fill"
                            android:layout_columnWeight="1"
                            android:layout_columnSpan="2"
                            android:padding="5dp"
                            android:focusable="false"
                            android:cursorVisible="false"
                            android:clickable="false"
                            android:layout_marginTop="@dimen/marginVerticalHalf"
                            android:layout_marginStart="@dimen/marginHorizontalFull"
                            android:layout_marginEnd="@dimen/marginHorizontalFull"
                            android:layout_marginBottom="@dimen/marginVerticalFull"
                            android:background="#FFFFFF"/>
                    </GridLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>